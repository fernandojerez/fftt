{
    "name": "fftt",
    "displayName": "fftt",
    "description": "FF Transpiler Tool",
    "version": "1.0.2",
    "engines": {
        "vscode": "^1.48.0"
    },
    "publisher": "fernandojerez",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/fernandojerez/fftt.git"
    },
    "categories": [
        "Programming Languages"
    ],
    "galleryBanner": {
        "color": "#408000",
        "theme": "dark"
    },
    "main": "./src/extension.js",
    "activationEvents": [
        "onCommand:ff.commands.run_camaro",
        "onCommand:ff.commands.open_kitt",
        "onCommand:ff.commands.open_tundra",
        "onLanguage:ff"
    ],
    "contributes": {
        "commands": [
            {
                "title": "FF Camaro",
                "command": "ff.commands.run_camaro"
            },
            {
                "title": "FF kitt",
                "command": "ff.commands.open_kitt"
            },
            {
                "title": "FF Tundra",
                "command": "ff.commands.open_tundra"
            },
            {
                "title": "Create FF Project",
                "command": "ff.commands.create_project"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "ff.commands.run_camaro"
                }
            ],
            "editor/context": [
                {
                    "command": "ff.commands.run_camaro"
                }
            ]
        },
        "languages": [
            {
                "id": "ff",
                "aliases": [
                    "FF",
                    "ff"
                ],
                "extensions": [
                    ".ff"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ff",
                "scopeName": "source.ff",
                "path": "./syntaxes/ff.tmLanguage.json"
            }
        ]
    },
    "devDependencies": {
        "@types/node": "^14.6.0",
        "@types/vscode": "^1.48.0",
        "@typescript-eslint/eslint-plugin": "^3.10.0",
        "@typescript-eslint/parser": "^3.10.0"
    }
}